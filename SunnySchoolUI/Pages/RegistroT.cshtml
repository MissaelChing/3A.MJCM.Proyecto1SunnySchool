@page
@model SunnySchoolUI.Pages.RegistroTModel
@{
    ViewData["Title"] = "RegistroT";
}
<h1>Registro  Tutor</h1>
<form class="mt-3" method="post">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Nombre Completo del Tutor</label>
                    <input type="text" asp-for="@Model.tutor.NombreT" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Nombre de Usuario</label>
                    <input type="text" asp-for="@Model.user.Usuario" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" asp-for="@Model.user.Contraseña" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-info btn-block" type="submit">Registrar</button>
            </div>
        </div>
    </div>
</form>
