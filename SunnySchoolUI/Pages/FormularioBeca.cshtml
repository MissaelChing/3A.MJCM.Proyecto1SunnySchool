@page
@model SunnySchoolUI.Pages.FormularioBecaModel
@{
    ViewData["Title"] = "FormularioBeca";
}
<form class="mt-3" method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title">Solicitud de beca</h1>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Nombre del Alumno</label>
                    <input  type="text" asp-for="@Model.solicitudM.Nombrealumno" class="form-control">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Curp</label>
                    <input type="text" asp-for="@Model.solicitudM.Curp" class="form-control">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Nacionalidad</label>
                    <input type="text" asp-for="@Model.solicitudM.Nacionalidad" class="form-control">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Fecha de nacimiento</label>
                    <input type="date" asp-for="@Model.solicitudM.FechaNacimiento" class="form-control">
                </div>
            </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>H</label>
                        <input name="only-one" id="only-one" type="checkbox" asp-for="@Model.solicitudM.Genero" class="form-control" onclick="uncheck()">
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label>M</label>
                        <input name="only-two" id="only-two" type="checkbox" asp-for="@Model.solicitudM.Genero" class="form-control" onclick="uncheck()">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <button  class="btn btn-info btn-block" type="submit">Enviar</button>
                    </div>
                </div>
            </div>
        </div>

    <script src="~/js/JavaScript.js"></script>
</form >